<% if user_signed_in? %>
  <div>
    <p>
      <%= @username %>
    </p>
  </div>
  <div>
    <p>
      <%= @user_id %>
    </p>
  </div>
  <div>
    <p>
      <%= link_to "Sign out", sign_out_path, data: { turbo: false } %>
    </p>
  </div>
<% else %>
  <%= button_to "Sign in", "/auth/auth0", method: :post,
    data: { turbo: false } %>
<% end %>
