<%# locals: kind: :sidebar or :topbar %>
<% nav_items = [
  {label: "ダッシュボード", path: root_path},
  {label: "採集行", path: root_path},
  # 例：{label: "標本", path: specimens_path},
] %>

<% nav_items.each do |item| %>
  <% active = current_page?(item[:path]) %>
  <% if kind == :sidebar %>
    <%= link_to item[:label], item[:path],
      data: { action: "click->sidebar#closeOnNavigate" },
      class: "block rounded-lg px-1 py-2 overflow-hidden text-ellipsis text-xs"
    %>
  <% else %> <%# :topbar %>
    <%= link_to item[:label], item[:path],
      class: "inline-flex items-center rounded-md px-2 py-2 text-xs text-ellipsis"
    %>
  <% end %>
<% end %>
